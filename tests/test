if [ -d build ] ; then
	rm -fr build
fi
cmake -S . -B build -Wno-dev 
cmake --build build
cd build
ctest --output-on-failure
cd ..
if [ ! -d gcovr-report ] ; then 
	mkdir gcovr-report
fi
rm -fr gcovr-report/* 2>/dev/null
